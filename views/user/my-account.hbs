                                        <script>
                                            // When edit button is clicked, show the edit user info modal
                                            document.getElementById('editUserInfoBtn').addEventListener('click', function () {
                                                $('#editUserInfoModal').modal('show');
                                            });

                                            // When save changes button is clicked, update user information
                                            document.getElementById('saveUserInfoBtn').addEventListener('click', function () {
                                                const newName = document.getElementById('editName').value;
                                                const newEmail = document.getElementById('editEmail').value;
                                                const newPhoneNumber = document.getElementById('editPhoneNumber').value;

                                                // Perform AJAX request to update user information
                                                fetch('/updateUserInfo', {
                                                    method: 'POST',
                                                    headers: {
                                                        'Content-Type': 'application/json'
                                                    },
                                                    body: JSON.stringify({
                                                        name: newName,
                                                        email: newEmail,
                                                        phoneNumber: newPhoneNumber
                                                    })
                                                })
                                                    .then(response => {
                                                        if (!response.ok) {
                                                            throw new Error('Failed to update user information');
                                                        }
                                                        // Handle success
                                                        return response.json();
                                                    })
                                                    .then(data => {
                                                        // Update the user details displayed in the UI
                                                        document.querySelector('.user-details p:nth-of-type(1)').innerHTML = '<strong>Name:</strong> ' + newName;
                                                        document.querySelector('.user-details p:nth-of-type(2)').innerHTML = '<strong>Email:</strong> ' + newEmail;
                                                        document.querySelector('.user-details p:nth-of-type(3)').innerHTML = '<strong>Phone Number:</strong> ' + newPhoneNumber;

                                                        $('#editUserInfoModal').modal('hide');

                                                        Swal.fire({
                                                            icon: 'success',
                                                            title: 'User information updated successfully.',
                                                            toast: true,
                                                            position: 'top-end',
                                                            showConfirmButton: false,
                                                            timer: 3000, // Auto close after 3 seconds
                                                            customClass: {
                                                                toast: 'swal-toast' // Apply custom CSS class for the toast message
                                                            }
                                                        });
                                                    })
                                                    .catch(error => {
                                                        console.error('Error:', error);
                                                        // Handle error
                                                    });
                                            });
                                        </script>


